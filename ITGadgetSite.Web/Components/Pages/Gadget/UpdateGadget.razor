@page "/gadget/update/{gadgetId:guid}" 

<h3>UpdateGadget</h3>

@if (Model == null)
{
    <p>Loading gadget data....</p>
}
else
{
    <EditForm Model="Model" OnValidSubmit="Submit">
    <div class="container">
        <div class="row mb-3">
            <div class="col-md-6">
                <label>GadgetName</label>
                <InputText class="form-control" @bind-Value="Model.GadgetName" />
                <ValidationMessage For="() => Model.GadgetName" />
            </div>
            <div class="col-md-6">
                <label>Quantity</label>
                <InputNumber class="form-control" @bind-Value="Model.Quantity" />
                <ValidationMessage For="() => Model.Quantity" />
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label>Price</label>
                    <InputNumber class="form-control" @bind-Value="Model.Price" />
                    <ValidationMessage For="() => Model.Price" />
                </div>
                <div class="col-md-6">
                    <label>Description</label>
                    <InputText class="form-control" @bind-Value="Model.Description" />
                    <ValidationMessage For="() => Model.Description" />
                </div>
            </div>
        </div>
        <button class="btn btn-secondary" type="submit">Submit</button>
    </div>
</EditForm>
}


