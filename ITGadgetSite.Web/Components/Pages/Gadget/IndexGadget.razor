@page "/gadget"
<h3>IndexGadget</h3>

@if (GadgetModels == null)
{
    <p>Loading ....</p>
}
else
{
    <a class="btn btn-primary" href="/gadget/create">Create</a>
    <table class="table">
        <thead>
            <tr>
                <th>GadgetName</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Description</th>a
                <th>CreatedAt</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var gadget in GadgetModels)
            {
                <tr>
                    <td>@gadget.GadgetName</td>
                    <td>@gadget.Quantity</td>
                    <td>@gadget.Price</td>
                    <td>@gadget.Description</td>
                    <td>@gadget.CreatedAt.ToShortDateString()</td>
                    <td>
                        <a class="btn btn-secondary" href="/gadget/update/@gadget.Id">Update</a>
                        <button class="btn btn-danger" @onclick="()=> {DeleteId = gadget.Id; Modal.OpenModal(); }">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <AppModal @ref="Modal">
        <Title>Notification</Title>
        <Body>
            Do you sure you want to delete this product
        </Body>
        <Footer>
            <button type="button" class="btn btn-primary" style="width:80px" @onclick="HandleDelete">Yes</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="() => Modal.Close()">Cancel</button>
        </Footer>
    </AppModal> 
}
